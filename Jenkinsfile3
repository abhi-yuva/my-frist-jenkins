pipeline{
    agent any

    tools {
        maven "maven"
    }

    stages{
        stage('Connect to Git'){
            steps{
                git url: 'https://github.com/abhi-yuva/maven.git' , branch:'main', 
                credentialsId: 'abhi-yuva'

                }
        }

        stage('Second Stage'){
            steps{
                sh 'mvn package'

            }
        }

        post{
            success{
                junit 'target/surefire-reports/**/*.xml'
            }
        }

    }
}
